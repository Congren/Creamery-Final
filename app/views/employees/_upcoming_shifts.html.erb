<h3>Upcoming Shifts</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th class="centered">Start Time</th>
    </tr>
  </thead>
  <tbody>
    <% @upcoming_shifts.each do |shift| %>
      <tr>
        <td><%= link_to shift.date, shift_path(shift) %></td>
        <td class="centered"><%= shift.start_time.strftime('%r') %></td>
      </tr>
    <% end %>
  </tbody>
</table>



